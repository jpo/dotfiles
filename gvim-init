" Hide the toolbar
set guioptions-=T

" Set window height and width
set lines=50 columns=100

" Set colorscheme
colorscheme distinguished

" Set font
if has("win32") || has("win64")
    set guifont=Consolas:h11:cANSI
elseif has("mac")
    set guifont=Menlo\ Regular:h13.00
else
    set guifont=Courier_New:h10:cDEFAULT
endif
